    "version": "0.2.0",
    "configurations": [    
        {
            "type": "lldb",
            "request": "launch",
            "name": "Debug executable 'power_control_center'",
            "preLaunchTask": "build-frontend",
            "cargo": {
                "args": [
                    "build",
                    "--bin=power_control_center",
                    "--package=power_control_center"
                ],
                "filter": {
                    "name": "power_control_center",
                    "kind": "bin"
                }
            },
            "args": [],
            "cwd": "${workspaceFolder}"
        },
        {
            "type": "lldb",
            "request": "launch",
            "name": "Debug unit tests in executable 'power_control_center'",
            "cargo": {
                "args": [
                    "test",
                    "--no-run",
                    "--bin=power_control_center",
                    "--package=power_control_center"
                ],
                "filter": {
                    "name": "power_control_center",
                    "kind": "bin"
                }
            },
            "args": [],
            "cwd": "${workspaceFolder}"
        }
    ]
}